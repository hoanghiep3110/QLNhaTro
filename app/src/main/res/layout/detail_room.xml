<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/botronedittext"
    android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:gravity="center"
            android:textStyle="italic"
            android:fontFamily="sans-serif-black"
            android:text="Nếu muốn sửa thông tin vui lòng nhập lại thông tin và thực hiện nhấn nút !"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="Tên Phòng :"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/edtTenPhong"
                android:layout_marginLeft="20dp"
                android:layout_width="250dp"
                android:layout_height="60sp"
                android:background="@drawable/background" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Trạng Thái :"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edtTrangThai"
            android:layout_marginLeft="20dp"
            android:layout_width="250dp"
            android:layout_height="60sp"
            android:background="@drawable/background" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSuaPhong"
            android:text="Có"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:background="@drawable/botronedittext"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnThoat"
            android:text="Không"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:background="@drawable/botronedittext"
            android:backgroundTint="@color/red"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>